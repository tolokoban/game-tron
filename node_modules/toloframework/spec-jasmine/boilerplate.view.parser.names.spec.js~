"use strict";

var Parser = require("../lib/boilerplate.view.parser.names");


describe('Module `boilerplate.view.parser.names`', function() {
  var Names = function() {};
  Names.prototype.addName = Names.addName;
  Names.prototype.getFreeName = Names.getFreeName;

  describe('function addName()', function() {
    var names = new Names();
    it('should return true the first time', function() {
      expect( names.addName( "foo" ) ).toBe( true );
    });
    it('should return false the second time', function() {
      expect( names.addName( "foo" ) ).toBe( false );
    });
    it('should return false the third time', function() {
      expect( names.addName( "foo" ) ).toBe( false );
    });

  });
});
