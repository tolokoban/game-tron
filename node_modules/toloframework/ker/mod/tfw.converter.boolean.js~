"use strict";

function f(v) {
  switch( typeof v ) {
  case "boolean":
    return v;
  case "number":
    return v != 0;
  case "string":
    v = v.trim().toLowerCase();
    if( v == 'true' || v == 'yes' ) return true;
    return false;
  default:
    return false;
  }
}
module.exports = function() { return f; };
